{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "lib": [
            "es2015",
            "esnext.asynciterable"
        ],
        "baseUrl": "./",
        "paths": {
            "@constants": ["src/app/constants/index"],
            "@base":["src/app/base/index"]
        },
        "sourceMap": true, // Must be enabled to debug
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}